<!DOCTYPE html>

<html>
  <head>
    <title>Inhabitants statistics</title>
    {{#each css_uri}}
    <link rel="stylesheet" href="{{this}}" />
    {{/each}}
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.2.2/bootstrap.min.js"></script>
    {{adjust_iframe_height_script}}
    {{download_csv}}
    {{download_json}}
  </head>

  <body>
    {{#if inhabitants_statistics}}
      <table class='table'>
        <tbody>
          {{#each inhabitants_statistics}}
            <tr>
              <th class='span4'>{{type}}</th>
              <td class='span2 numeric'>{{cnt}}</td>
              <td class='spanx6'></td>
            </td>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <div>
        No data
      </div>
    {{/if}}
  </body>
</html>
